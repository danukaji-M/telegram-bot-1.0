USERS_HANDLE_BOT_API=

# Debugging & Logging
DEBUG=true                           # Enable or disable debug mode (true/false)
LOG_LEVEL=info                        # Logging level ('debug', 'info', 'warn', 'error')
ENABLE_ERROR_TRACKING=true            # Enable tracking of errors for troubleshooting
ERROR_LOG_FILE=/logs/error.log       # Path where error logs will be saved

# Bot Behavior
AUTO_REPLY=true                       # Enable auto-reply for users with common queries
MAX_RESPONSE_TIME=5                   # Maximum response time in seconds
ENABLE_ANTI_SPAM=true                 # Enable anti-spam mechanism (e.g., limit queries per second)
MAX_CONCURRENT_REQUESTS=3             # Max number of concurrent requests a user can send at once

# Database Configuration
DB_HOST=jdbc:mysql://localhost:3306/ruu_movies
DB_USER=test
DB_PASSWORD=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Telegram Local Server Properties
TELEGRAM_LOCAL_SERVER_HOST=http://localhost:8081/bot
TELEGRAM_LOCAL_SERVER_PORT=8081

# Proxy (Optional)
PROXY_HOST=null
PROXY_PORT=null
PROXY_USER=null
PROXY_PASSWORD=null

# Features
ENABLE_TORRENT_FEATURE=true           # Enable torrent feature
ENABLE_MAGNET_FEATURE=false          # Feature coming soon
ENABLE_SEARCH_FEATURE=false          # Feature for search functionality
ENABLE_BOOK_FEATURES=false           # Feature coming soon
ENABLE_WEB_API=false                 # Feature coming soon
AUTOMATIC_REACT=false                # Feature coming soon
AUTO_DELETE_MESSAGE=enable           # Automatically delete messages

# Search Feature Configurations
SEARCH_ENGINE=redis                  # Could be 'redis' or 'redisearch' (if using RediSearch for better search)
SEARCH_RESULT_LIMIT=10               # Number of results to return per search query
SEARCH_CACHE_EXPIRY=3600             # Time in seconds before cache expires for search results
ENABLE_WILDCARD_SEARCH=true          # Allow wildcard searches (e.g., "Inter*")
SEARCH_LANGUAGE_PREFERENCE=en        # Default search language (can be 'en' or 'any')

# Caching Configuration
FILM_CACHE_EXPIRY=31,536,000         # Cache expiry for film data in seconds (24 hours)
CATEGORY_CACHE_EXPIRY=31,536,000     # Cache expiry for category data in seconds (24 hours)
CACHE_TYPE=redis                     # Could be 'redis', 'memory', or 'db' for different caching strategies

# User Management Features
MAX_SEARCH_QUERIES_PER_DAY=100       # Limit on how many search queries a user can make per day
PREMIUM_USER_REQUIRED=false          # Whether the feature requires premium users (true/false)
ENABLE_USER_REGISTRATION=true        # Allow users to register with their account
USER_REGISTRATION_LIMIT=5000         # Limit on the number of users who can register (for testing purposes)

# Notification Settings
ENABLE_NOTIFICATIONS=true            # Whether to enable notifications for the bot
NOTIFY_ADMIN_ON_NEW_USER=true        # Notify admin when a new user registers
NOTIFY_ADMIN_ON_ERROR=true           # Notify admin on bot errors
ALERT_CHANNEL_ID=-1001234567890      # Telegram channel ID to send alerts to (use negative for group/channel)

# Media File Management
MAX_FILE_SIZE_MB=2000                # Maximum file size allowed for uploads (in MB)
ENABLE_FILE_COMPRESSION=true         # Enable file compression for large downloads

# Feature Toggles
ENABLE_RATING_FEATURE=true           # Allow users to rate films
ENABLE_META_FETCHING=true            # Fetch additional metadata like plot, release date, etc.
ENABLE_FILM_SUGGESTION=true          # Suggest films based on user preferences
ENABLE_DOWNLOAD_QUEUE=true           # Enable download queue for batch film downloads
ENABLE_TORRENT_FETCHING=true         # If you plan to integrate torrent fetching of films
ENABLE_DAILY_RECOMMENDATION=true     # Daily film recommendations for users

